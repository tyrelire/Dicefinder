                                <img src="{{ asset('uploads/images-jdr/' ~ groupe.picture) }}"
                                    alt="{{ groupe.title }} image"
                                    class="rounded-lg mb-4 w-full h-[20rem] object-cover {% if groupe.players|length >= groupe.maxPlayer %} blur-sm {% endif %} tokenImage">
